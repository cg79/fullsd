version: '2'

services:
  web:
    #image: node:latest
    build: .
    ports:
    - "3001:80"
    depends_on:
    - mongo
  mongo:
    container_name: mongo_container
    image: mongo:latest
    expose:
      - '27017'
    ports:
      - "27017:27017"
    volumes:
      - db_data:/data/db
  

volumes:
  db_data:
